<section class="wrapper" style="margin-top:80px;">

	<h1>The 310</h1>

	<div id="drinking" class="row" style="">



<% @games.each do |game| %>
   
		<div class="col-md-3">
			<%= link_to game_path(game) do %>
			<div id="drinking-pod">
				<div class="row">
					<h3><%= game.name%></h3>
				</div>
				<div class="row">
					<i class="<%= game.icon%>"></i>
				</div>
			</div>
			<%end%>
		</div>

<% end %>


		<div class="col-md-3">
			<div id="drinking-pod">
				<div class="row">
					<h3>More Coming</h3>
				</div>
				<div class="row">
					<i class="fa fa-ellipsis-h fa-5x"></i>
				</div>
			</div>
		</div>

		<!--TODO: Loop Thru All Games-->
	
		
	</div>


</section>